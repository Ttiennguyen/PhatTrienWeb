@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<div class="col-md-6">
    <style>
        #registerForm {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    
        h2 {
            font-size: 1.5em;
            margin-bottom: 20px;
        }
    
        hr {
            border: 1px solid #ddd;
            margin: 20px 0;
        }
    
        .form-floating {
            margin-bottom: 15px;
        }
    
        .form-control {
            width: 100%;
            padding: 10px;
            box-sizing: border-box;
        }
    
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
    
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
    </style>
    <form id="registerForm" asp-action="Register" asp-controller="User" asp-route-returnUrl="" method="post">
        <h2>Create a new account.</h2>
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="FristName" class="form-control" autocomplete="firstName" aria-required="true"/>
            <label asp-for="FristName"></label>
            <span asp-validation-for="FristName" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="LastName" class="form-control" autocomplete="lastName" aria-required="true"/>
            <label asp-for="LastName"></label>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="PhoneNumber" type="tel" class="form-control" autocomplete="PhoneNumber" aria-required="true" value="+84"/>
            <label asp-for="PhoneNumber"></label>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Address" class="form-control" autocomplete="Address" aria-required="true"/>
            <label asp-for="Address"></label>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true"/>
            <label asp-for="Email"></label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true"/>
            <label asp-for="Password"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true"/>
            <label asp-for="ConfirmPassword"></label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
    </form>
</div>



@section Scripts
{
    <partial name ="_ValidationScriptsPartial"/>
}

