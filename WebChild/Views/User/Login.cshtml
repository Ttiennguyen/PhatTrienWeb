@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<div class="col-md-6">
    <style>
            .login-section {
                margin: 20px;
                padding: 20px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }
    
            h2 {
                font-size: 1.5em;
                margin-bottom: 15px;
            }
    
            hr {
                border: 1px solid #ddd;
                margin: 20px 0;
            }
    
            .form-group {
                margin-bottom: 20px;
            }
    
            .form-label {
                display: block;
                margin-bottom: 5px;
            }
    
            .form-control {
                width: 100%;
                padding: 8px;
                box-sizing: border-box;
            }
    
            .validation-summary,
            .validation-message {
                display: block;
                margin-top: 10px;
            }
    
            .form-check {
                margin-top: 10px;
            }
    
            .submit {
                margin-top: 20px;
            }
    
            .button {
                /* Add button styling */
                padding: 10px 20px;
                background-color: #4CAF50;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }
    
            .button:hover {
                background-color: #45a049;
            }
    </style>
    
    <section class="login-section">
        <form asp-action="Login" asp-controller="User" id="account" method="post">
            <h2>Use a local account to log in.</h2>
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Email" class="form-label" style="color: grey">Email</label>
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true"/>
                <span asp-validation-for="Email" class="text-danger  validation-message"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Password" class="form-label" style="color: grey">Password</label>
                <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true"/>
                <span asp-validation-for="Password" class="text-danger validation-message"></span>
            </div>
           
            <div class="form-group form-check">
                <label asp-for="RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="RememberMe"/> Remember me
                </label>
            </div>
            
            <div class="form-group">
                <a class="" id="register" asp-controller="User" asp-action="Register">Create an account</a>
            </div>
            
            <div class="submit">
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-success">Log in</button>
            </div>
        </form>
    </section>
</div>




