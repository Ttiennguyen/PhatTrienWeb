@model List<WebChild.Data.Product>
@{
    ViewData["Title"] = "Các sản phẩm";
    Layout = "_Layout";
}

<div class="card-columns">
    @foreach (var product in Model)
    {
        <div class=card>
            <h3 class="card-header">@product.ProductName</h3>
            <div class="card-body" style="height: 150px;">
                @product.ProductDescription
            </div>
            <div class="card-footer">
                <span class="text-muted">@(product.ProductPrice) VND</span>    
                <a asp-route="addcart" 
                   asp-route-productid="@product.Id"
                   class="btn btn-secondary btn-sm float-right">Đặt hàng</a>
            </div>
        </div>
    }

</div>