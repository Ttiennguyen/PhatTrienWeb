@model List<WebChild.Models.Product_Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count > 0)
{
    decimal total = 0;
    <h1>Chi tiết đơn hàng</h1>

    <table class="table">
        <thead>
        <tr>
            <th>
                Đơn hàng số
            </th>
            <th>
                Image
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Số lượng
            </th>
            <th>
            Đơn giá
            <th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            total = @item.Order.Total_Price;
            <tr>
                <td>
                    @item.Order.OrderId
                </td>
                <td>
                    <img src="~/image/@item.Product.image" alt="Hình ảnh" width="100" height="100"/>
                </td>
                <td>
                    @item.Product.ProductName
                </td>
                <td>
                    x @item.Quanlity
                </td>
                <td>
                    @item.Price
                </td>
            </tr>
        }

        <tr>
            <td colspan="4" class="text-right">Tổng tiền</td>
            <td>@total</td>
            <td></td>
        </tr>
        </tbody>
    </table>
}
else
{
    <h1>Trống</h1>
}
