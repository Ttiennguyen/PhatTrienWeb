@model IEnumerable<WebChild.Models.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Đơn hàng</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            Đơn hàng ID
        </th>
        <th>
            Ngày tạo
        </th>
        <th>
            Tổng tiền
        </th>
        <th>
           Số điện thoại
        </th>
        <th>
            Địa chỉ nhận hàng
        </th>
        <th>
           Email
        </th>
        <th>
           Trạng thái
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total_Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Shipping_Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email_User)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            <button class="btn btn-info" >
                <a style="color: #FFFFFF; text-decoration: none;" asp-action="OrderDetail" asp-route-id="@item.OrderId">Details</a>
            </button>
        </td>
    </tr>
}
    </tbody>
</table>
