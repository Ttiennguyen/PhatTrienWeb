@using WebChild.Data
@model WebChild.Data.Product

@if (@Model.StatusId == 1)
{
    <div class="box-product">
        <a class="image" href="/Product/DetailProduct/@Model.Id" title="View more"> <img src="~/image/@Model.image" alt=""> </a>
        <h3 class="name"><a href="/Product/DetailProduct/@Model.Id" title="">@Model.ProductName</a></h3>
        <p class="wrap_price"> <span class="price">$@Model.ProductPrice</span> </p>
        <p class="submit">
             <form asp-controller="Product" asp-action="AddToCart" asp-route-id="@Model.Id" method="post">
                <input type="submit" value="Add to Cart" class="button">
             </form>
        </p>
    </div>
}
@if (@Model.StatusId == 3)
{
    <div class="box-product">
        <a class="image" href="/Product/DetailProductSale/@Model.Id" title="View more"> <img src="~/image/@Model.image" alt=""> <span class="new">Sale</span> </a>
        <h3 class="name"><a href="/Product/DetailProductSale/@Model.Id" title="">@Model.ProductName</a></h3>
        <p class="wrap_price"> <span class="price-old">$@Model.ProductPrice</span> <span class="price-new">$@Model.ProductPriceSale</span> </p>
        <p class="submit">
            <input type="button" value="Add to Cart" class="button">
        </p>
    </div>
}
