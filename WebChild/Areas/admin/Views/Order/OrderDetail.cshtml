@model List<WebChild.Models.Product_Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chi tiết đơn hàng</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Đơn Hàng số
            </th>
            <th>
                Image
            </th>
            <th>
               Tên Sản Phẩm
            </th>
            <th>
                Số lượng
            </th>
            <th>
               Đơn giá
            <th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Order.OrderId)
            </td>
            <td>
                <img src="~/image/@Html.DisplayFor(modelItem => item.Product.image)" alt="Hình ảnh" width="100" height="100"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quanlity)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.Price)
            </td>
        </tr>
}
    </tbody>
</table>
